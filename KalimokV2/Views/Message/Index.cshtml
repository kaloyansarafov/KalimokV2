                </th>
                <th></th>
            </tr>
            </thead>
        </div>
        <div class="card-body">
            <tbody>
            @foreach (var item in Model.sent.OrderByDescending(x => x.MessageDate))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MessageText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MessageDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sender.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Receiver.UserName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </div>
    </table>
</div>